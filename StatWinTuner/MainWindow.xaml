<Window x:Class="StatWinTuner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatWinTuner"
        mc:Ignorable="d" WindowStyle="ToolWindow" FontSize="16" FontWeight="SemiBold"
        ResizeMode="NoResize"
        Title="Арм Стат - настройка StatWin" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid x:Name="gridy" Margin="40,20"/>
        <TextBlock x:Name="tBlMessage" TextWrapping="Wrap" Padding="15,10" Background="Transparent"/>
        <Button x:Name="btnRun" Grid.Row="1"  Background="Transparent" FontSize="25" Content="Обновить" Click="Button_Click"/>
    </Grid>
</Window>
