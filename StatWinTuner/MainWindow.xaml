<Window x:Class="StatWinTuner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StatWinTuner"
        mc:Ignorable="d" WindowStyle="ToolWindow" FontSize="16"
        Title="Арм Стат - StatWin" Height="350" Width="430">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid x:Name="gridy" Margin="40,20"/>
        <TextBlock x:Name="tBlMessage" TextWrapping="Wrap" Padding="15,10" Background="Transparent"/>
        <Button Grid.Row="1" Width="160" Height="50" Background="Transparent" FontSize="20" Content="Настроить" Click="Button_Click"/>
    </Grid>
</Window>
